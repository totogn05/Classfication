<Window x:Class="Classfication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Classfication"
        mc:Ignorable="d"
        Title="熔池分類器" Height="750" Width="1200" Background="#f0f0f0">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#BECBE3"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="40"/>
        </Style>
        <Style x:Key="TextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.Row="1" Margin="0 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" BorderThickness="2" BorderBrush="Gray" Margin="0 0 5 0">
                <GroupBox.Header>
                    <TextBlock Text="影像變數" Style="{StaticResource TextStyle}"/>
                </GroupBox.Header>
                <Grid Margin="5">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <Grid Background="#FBF8ED" Height="40" Width="250" VerticalAlignment="Center">
                            <TextBlock Text="辨識模式 : " Height="15" Width="80" HorizontalAlignment="Left" Margin="20 0 0 0"/>
                            <CheckBox x:Name="SinglePic_Model" Checked="Model_Select" IsChecked="True" Content="單張圖片" Width="80" Height="20" VerticalContentAlignment="Center" Margin="80,10,0,10" HorizontalAlignment="Left"/>
                            <CheckBox x:Name="MutiplePic_Model" Checked="Model_Select" IsChecked="False" Content="多張圖片" Width="80" Height="20" VerticalContentAlignment="Center" Margin="130 0 0 0"/>
                            <Button Width="20" Height="20" HorizontalAlignment="Right" Background="Transparent" BorderThickness="0" Margin="0 -5 10 0" Click="Select_Image_Click">
                                <Image Source="resources/folder.png"/>
                            </Button>

                        </Grid>
                        <Grid Background="#FBF8ED" Height="40" Width="250" VerticalAlignment="Center" Margin="0 20 0 0">
                            <TextBlock Text="圖片名稱 : " Height="15" Width="80" HorizontalAlignment="Left" Margin="20 0 0 0"/>
                            <TextBlock x:Name="SelectPic_txt" Height="20" Width="165" VerticalAlignment="Center" TextAlignment="Center" HorizontalAlignment="Left" Margin="80 0 5 0"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal">
                            <Grid Background="#FBF8ED" Height="40" Width="155" HorizontalAlignment="Left" Margin="0 20 0 0">
                                <TextBlock Text="圖片尺寸 : " Height="15" Width="60" HorizontalAlignment="Left" Margin="20 0 0 0"/>
                                <TextBlock x:Name="PicSize_txt" Text="" Height="15" Width="62" HorizontalAlignment="Left" Margin="80 0 0 0"/>
                            </Grid>
                        </StackPanel>

                        <Grid Background="#FBF8ED" Height="40" Width="250" Margin="0 20 0 0">
                            <TextBlock Text="圖片縮放 : " Height="15" Width="60" HorizontalAlignment="Left" Margin="20 0 0 0"/>
                            <Slider Name="ImageScaleSlider" Width="110" Height="18" VerticalAlignment="Center" Margin="20 3 0 0" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged_1" PreviewMouseWheel="ImageScaleSlider_MouseWheel"/>
                            <TextBlock Name="ImageScaleValue" Height="15" Width="40" HorizontalAlignment="Right" Margin="0 0 20 0" VerticalAlignment="Center"/>
                            <!-- 添加重置按鈕 -->
                            <Button Name="ResetButton1" HorizontalAlignment="Right" Width="15" Height="15" Click="ResetButton_Click1" Background="#FBF8ED" BorderThickness="0">
                                <Image Source="resources/reset.jpg" Stretch="Uniform"/>
                            </Button>
                        </Grid>

                        <Grid Background="#FBF8ED" Height="40" Width="250" VerticalAlignment="Center" Margin="0 20 0 0">
                            <TextBlock Text="對比度 : " Height="15" Width="60" HorizontalAlignment="Left" Margin="20 0 0 0"/>
                            <Slider Name="ContrastSlider" Width="110" Height="18" VerticalAlignment="Center" Margin="20 3 3 0" Minimum="0" Maximum="100" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" PreviewMouseWheel="ContrastSlider_MouseWheel"/>
                            <TextBlock Name="ContrastValue" Height="15" Width="40" HorizontalAlignment="Right" Margin="0 0 20 0" VerticalAlignment="Center"/>
                            <!-- 添加重置按鈕 -->
                            <Button Name="ResetButton" HorizontalAlignment="Right" Width="15" Height="15" Click="ResetButton_Click" Background="#FBF8ED" BorderThickness="0">
                                <Image Source="resources/reset.jpg" Stretch="Uniform"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" BorderThickness="2" BorderBrush="Gray" Margin="0 0 5 0">
                <GroupBox.Header>
                    <TextBlock Text="辨識數據" Style="{StaticResource TextStyle}"/>
                </GroupBox.Header>
                <Grid Margin="5">
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="450"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Style="{StaticResource TextStyle}" Text="熔池影像" FontSize="20" />
            <Border Grid.Row="1">
                <!-- 滾動區域 -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                    <Grid>
                        <Image x:Name="Vertify_Image" 
                               Stretch="None" 
                               Margin="10"
                               RenderTransformOrigin="0.5, 0.5">
                            <Image.RenderTransform>
                                <ScaleTransform x:Name="ImageScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </ScrollViewer>
            </Border>
            <!-- button location -->

            <!-- Previous_Image_Button -->
            <Button x:Name="Previous_Image_Button" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 0 30 0"
                Width="30" Height="30"  BorderBrush="Transparent" Background="Transparent" Click="Previous_Image_Click" Visibility="Hidden">
                <Image Source=".\resources\previous_image_button.png"/>
            </Button>

            <!-- Next_Image_Button -->
            <Button x:Name="Next_Image_Button" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Width="30" Height="30" BorderBrush="Transparent" Background="Transparent" Visibility="Hidden" Click="Next_Image_Click">
                <Image Source=".\resources\next_image_buttom.png"/>
            </Button>
            <Border Grid.Row="2" BorderThickness="0 1 0 0" BorderBrush="Gray">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Style="{StaticResource TextStyle}" Text="缺陷辨識結果" />
                    <Grid Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                            <TextBlock>
                                <Image Source=".\resources\Under_filled.png" Width="90" Height="90" Margin="10 0 0 0"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Row="0" BorderThickness="2" BorderBrush="Gray" Margin="5 0 0 0">
                <GroupBox.Header>
                    <TextBlock Text="模型變數" Style="{StaticResource TextStyle}"/>
                </GroupBox.Header>
                <Grid Margin="5">
                    <StackPanel Orientation="Vertical">
                        <Button Style="{StaticResource ButtonStyle}" Click="Select_file_Click" VerticalAlignment="Top" HorizontalAlignment="Right" Content="選擇模型" FontWeight="Bold"/>
                        <TextBlock Text="模型名稱 : " Style="{StaticResource TextStyle}" FontSize="12"/>
                        <TextBlock x:Name="Model_Name_txt" Text="" Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock Text="模型輸入尺寸 : " Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock x:Name="Input_ImageNumber_txt" Text="" Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock x:Name="Input_ImageChannel_txt" Text="" Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock x:Name="Input_ImageSize_txt" Text="" Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock Text="模型輸出 : " Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                        <TextBlock x:Name="Output_ImageSize_txt" Text="" Style="{StaticResource TextStyle}" FontSize="12" Margin =" 0 15 0 0"/>
                    </StackPanel>

                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" BorderThickness="2" BorderBrush="Gray" Margin="5 0 0 0">
                <GroupBox.Header>
                    <TextBlock Text="推理結果" Style="{StaticResource TextStyle}"/>
                </GroupBox.Header>
                <Grid Margin="5">
                    <Button Style="{StaticResource ButtonStyle}" Click="Vertify_btn" Height="30" Content="辨識" HorizontalAlignment="Right" VerticalAlignment="Bottom" RenderTransformOrigin="-0.376,0.34"/>
                </Grid>
            </GroupBox>

            <GroupBox Grid.Row="1" BorderThickness="2" BorderBrush="Gray" Margin="5 0 0 0">
                <GroupBox.Header>
                    <TextBlock Text="辨識結果" Style="{StaticResource TextStyle}"/>
                </GroupBox.Header>
                <Grid Margin="5">
                    <DataGrid x:Name="ResultDataGrid" AutoGenerateColumns="False" Width="200" Margin="32,15,31,96">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="分類名稱" Binding="{Binding Label}" Width="130"/>
                            <DataGridTextColumn Header="信心程度" Binding="{Binding Probability, StringFormat=P2}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- 顯示分類結果 -->

                    <TextBlock Text="最高機率的辨識結果：" Style="{StaticResource TextStyle}" Margin="6,204,5,61"/>
                    <TextBlock x:Name="TopResultTextBlock" FontSize="16" Margin="10,239,18,34"/>

                </Grid>
            </GroupBox>

        </Grid>
    </Grid>
</Window>
